@model maintenanceIsertec.Models.Cuenta

@{
    ViewBag.Title = "Nuevo Registro";
    Layout = "~/Views/Shared/Layout_1.cshtml";
}
<script type='text/javascript'>
    function onchangeS(seleccion, desplegable) {
        if (seleccion == "Estandar") {
            document.getElementById(desplegable).style.display = "none";
        } else {
            document.getElementById(desplegable).style.display = "block";
        }
    }
</script>
<div class="container">
    <h3 class="text-center">Bienvendio a Personal Cloud</h3>
    @using (Html.BeginForm("CrearCuenta", "Cuenta", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h3>Ingresa Datos Personales</h3>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2">Ingresa Usuario</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.codusuario, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.codusuario, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Contraseña</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.password_user, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
            @Html.ValidationMessageFor(model => model.password_user, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Ingresa Nombre</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.firstname, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.firstname, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Ingrea Apellido</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.lastname, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.lastname, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-10">Ingresa Correo Electronico</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <label class="control-label col-md-10">Seleccione tipo de Cuenta</label>
        <div class="col-md-10">
            @Html.DropDownListFor(model => Model.tipocuenta, new List<SelectListItem>
           {
          new SelectListItem{ Text="Seleccione valor", Value = "0" },
               new SelectListItem{ Text="Estandar - 15 GB", Value = "Estandar" },
                  new SelectListItem{ Text="Avanzada - 50 GB", Value = "Avanzada" },
                  new SelectListItem{ Text="Premium - 100 GB", Value = "Premium" },
           }, new { @class = "form-control" , @onchange = "onchangeS(this.value,'metodo')" })
            @Html.ValidationMessageFor(model => model.tipocuenta, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <div class="list-group">
                <a href="#" class="list-group-item list-group-item-action active">
                    Tarifas de Cuenta
                </a>
                <a href="#" class="list-group-item list-group-item-action">Estandar - 15 GB (Gratis)</a>
                <a href="#" class="list-group-item list-group-item-action">Avanzada - 50 GB ($ 1.99)</a>
                <a href="#" class="list-group-item list-group-item-action">Premium - 100 GB ($ 3.99)</a>
            </div>
        </div>
        </div>
        <br />
        <div id="metodo">
            <h3>Método de Pago</h3>
            <div class="form-group">
                <label class="control-label col-md-10">Ingresa Número de Tarjeta</label>
                <div class="col-md-10">
                    <input type="text" id="test" name="test" class="form-control" required>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-10">Nombre en la Tarjeta</label>
                <div class="col-md-10">
                    <input type="text" id="forget" name="forget" class="form-control" required>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-10">Código de Seguridad CVV</label>
                <div class="col-md-10">
                    <input type="text" id="test2" name="test2" class="form-control" required>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-5">Fecha Vencimiento</label>
                <div class="col-md-5">
                    <input type="text" id="test3" name="test3" class="form-control" required placeholder="MM">
                </div><br />
                <div class="col-md-5">
                    <input type="text" id="test4" name="test4" class="form-control" required placeholder="YY">
                </div>
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input style="float:right" type="submit" value="Crear Cuenta" class="btn btn-primary" />
            </div>
        </div>
    </div>
    }
    <br />
    <br />
    <br />
</div>
